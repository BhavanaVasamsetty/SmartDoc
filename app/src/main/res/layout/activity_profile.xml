<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EditText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivit">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo123"
        app:srcCompat="@drawable/icn_backblue" />

    <TextView
        android:id="@+id/Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/profile_1"
        android:textColor="#03A9F4"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:text="Profile" />

    <EditText
        android:id="@+id/Edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/name"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="DuplicateIds"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/Adhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/aadhar_number"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="12"
        android:digits="0123456789"
        android:textColor="#2B07DF"
        android:textSize="20sp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/phnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/phone_number"
        android:textStyle="bold"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#2B0FC1"
        android:textSize="20sp"
        tools:ignore="LabelFor"
        android:importantForAutofill="no" />


    <TextView
        android:id="@+id/text_view_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/d_mm_yyyy"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_picker_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/choose_your_dob" />

    <Button
        android:id="@+id/Toastbutton"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/submit"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Submit" />


</LinearLayout>